@import "normalize.styl"
@import "fonts.styl"

gris_oscuro = #333333
gris_claro = #818181
gris_mas_claro = #F0F0F0

body
	font-size 16px
	font-family 'Varela Round', sans-serif
	
a
	text-decoration none
	
figure
	margin 0
img
	vertical-align top
ul
	margin 0
	padding 0

.button-menu
	color gris_oscuro
	left .5em
	margin-top -10px
	position absolute
	top 50%
	
.relative
	position relative
	
.border-bottom
	border-bottom 1px solid gris_claro
	
.center-block
	margin 0 auto
	
.wrap
	width 1000px
	
.header
	height 3.5em
	.title
		font-size 1.1em
		line-height 3.5em
		margin 0
		text-align center
		
	.menu
		display block
		background gris_mas_claro
		overflow hidden
		border-top 1px solid gris_claro
		.item
			float left
			list-style none
			a
				color gris_oscuro
				cursor pointer
				display block
				padding 1em
				text-transform uppercase
				border-top 5px solid transparent
				transition .3s border-top
				&:hover
					border-top 5px solid gris_claro